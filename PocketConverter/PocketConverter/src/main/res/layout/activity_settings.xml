<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".settings"
    android:background="@drawable/background">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE CONVERSION"
        android:textSize="14dp"
        android:id="@+id/btnSave"
        android:background="@drawable/button"
        android:textColor="#000000"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/editFormula"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:inputType="textNoSuggestions"
        android:id="@+id/editFrom"
        android:layout_below="@+id/txtFrom"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textCursorDrawable="@null"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:inputType="textNoSuggestions"
        android:id="@+id/editTo"
        android:layout_below="@+id/txtTo"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textCursorDrawable="@null"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:inputType="textNoSuggestions"
        android:id="@+id/editFormula"
        android:layout_below="@+id/txtFormula"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textCursorDrawable="@null"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Convert From:"
        android:id="@+id/txtFrom"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Convert To:"
        android:id="@+id/txtTo"
        android:layout_below="@+id/editFrom"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Formula: From = x*To (x is a number)"
        android:id="@+id/txtFormula"
        android:layout_below="@id/editTo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:textColor="#000000"/>

</RelativeLayout>
